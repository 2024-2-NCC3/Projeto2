<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#126535"
    android:padding="20dp"
    tools:context="br.fecap.pi.voice.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texto Explicativo -->

        <!-- CardView: Nova Denúncia (Centro) -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="O VOICE é um aplicativo para denúncias de preconceitos, como racismo e discriminação de gênero, que garante o anonimato dos usuários sem necessidade de cadastro."
            android:textColor="@color/Branco"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_new_report"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/button_warning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#FF1744"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_warning"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:backgroundTint="@color/Vermelho"
                    android:contentDescription="Ícone de denúncia"
                    android:src="@drawable/megaphone"
                    app:layout_constraintBottom_toTopOf="@id/text_warning"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.47"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nova Denúncia"
                    android:textColor="@color/Vermelho"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_warning" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Texto "Entidades" -->
        <TextView
            android:id="@+id/text_entities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="ENTIDADES"
            android:textColor="@color/Branco"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- CardView: S.O.S CRPIR (Parte inferior) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sos_crpir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#ec6608"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_sos"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="Ícone S.O.S CRPIR"
                    android:src="@drawable/crpir"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_sos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="S.O.S CRPIR"
                    android:textAlignment="center"
                    android:textColor="@color/Branco"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/image_sos"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Outras views (Ruth Cardoso, FECAFRO etc.) -->
        <!-- CardView: Ruth Cardoso (Parte inferior) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_ruth_cardoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#4B0272"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_ruth"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="Ícone Ruth Cardoso"
                    android:src="@drawable/banner_ruth_cardoso"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_ruth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ruth Cardoso"
                    android:textColor="@color/Branco"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_ruth"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView: FECAFRO (Parte inferior) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_fecafro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#151515"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_fecafro"
                    android:layout_width="135dp"
                    android:layout_height="130dp"
                    android:contentDescription="Ícone FECAFRO"
                    android:src="@drawable/banner_fecafro"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_fecafro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="FECAFRO"
                    android:textColor="@color/Branco"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_fecafro"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
